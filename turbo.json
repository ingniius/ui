{
  "$schema": "https://turborepo.com/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "ui": "tui",
  "envMode": "loose",
  "tasks": {
    "start": { "persistent": true },
    "dev": { "cache": false, "interactive": true, "persistent": true },
    "build": { "dependsOn": ["^build"], "outputs": ["build/**", "dist/**"] },
    "test": { "outputs": ["coverage"] },
    "typecheck": { "outputs": [".cache/tsbuildinfo.json"] },
    "clean": { "cache": false },
    "//#check": {},
    "//#fix": { "cache": false },
    "//#dry": { "cache": false }
  }
}
