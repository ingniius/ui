{
  "$schema": "../node_modules/@biomejs/biome/configuration_schema.json",
  "extends": ["ultracite/core"],
  "assist": {
    "actions": {
      "source": {
        "organizeImports": {
          "level": "on",
          "options": {
            "groups": [
              ":NODE:",
              ":BLANK_LINE:",
              ["@veehance/**"],
              ":BLANK_LINE:",
              ":PACKAGE:",
              ":PACKAGE_WITH_PROTOCOL:",
              ":BLANK_LINE:",
              ":ALIAS:",
              ":BLANK_LINE:",
              ":PATH:"
            ]
          }
        }
      }
    }
  },
  "css": {
    "parser": {
      "tailwindDirectives": true
    }
  },
  "formatter": {
    "indentStyle": "space",
    "lineWidth": 80
  },
  "linter": {
    "rules": {
      "nursery": {
        "useSortedClasses": {
          "level": "on",
          "options": {
            "attributes": ["classList"],
            "functions": ["cc", "cn", "cv", "cx"]
          }
        }
      },
      "style": {
        "noNonNullAssertion": "off",
        "useBlockStatements": "off",
        "useConsistentTypeDefinitions": "off"
      },
      "suspicious": {
        "noExplicitAny": "off"
      }
    }
  }
}
